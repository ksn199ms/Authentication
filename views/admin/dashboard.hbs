<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<section class="bodyColor">
    <button type="button" class="btn btn-light m-3 float-end form a "><a href="/admin/logout">Logout</a></button>

    <div class="parent container d-flex justify-content-center align-items-center h-auto w-auto">
        <div class="child">
            <button type="button" class="btn btn-success m-3 float-end "><a
                    style="color: black; text-decoration: none" href="/admin/add">Add User</a></button>
            <h1 class="text-center">ADMIN DASHBOARD</h1>
            <table>.
                <tr>
                    <th>User-Email</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>

                {{#each users}}
                <tr>
                    <td>{{this.email}}</td>
                    <td><button type="button" class="btn btn-primary m-3 float-end "><a
                                style="color: black; text-decoration: none" href="/admin/edit/{{this._id}}" onclick="return confirm('Are you sure you want to edit this user? {{this.email}}')">Edit</a></button></td>
                    <td><button type="button" class="btn btn-danger m-3 float-end  "><a
                                style="color: black; text-decoration: none" href="/admin/delete/{{this._id}}"
                                onclick="return confirm('Are you sure you want to delete this user? {{this.email}}')">Delete</a></button>
                    </td>
                </tr>
                {{/each}}

            </table>
        </div>
    </div>
</section>


